@using TrainingForMVC.Models
@model Employees
    
@{
    ViewBag.Title = "Create";
}

<h1 class="display-1 py-5">Crear nuevo empleado</h1>

@using (Html.BeginForm())
{ 


<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(model => model.TitleOfCourtesy)
            @Html.EditorFor(model => model.TitleOfCourtesy, new { htmlAttributes = new { @class = "form-control" } })
